<Window x:Class="PaymentApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PaymentApp.Views"
        Title="Платежный модуль - Спецификации операций" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl>
            <!-- ВКЛАДКА ПЕРЕВОДА -->
            <TabItem Header="📤 ПЕРЕВОД МЕЖДУ СЧЕТАМИ">
                <views:TransferView/>
            </TabItem>

            <!-- ВКЛАДКА СНЯТИЯ -->
            <TabItem Header="💰 СНЯТИЕ СРЕДСТВ">
                <views:WithdrawView/>
            </TabItem>

            <!-- ВКЛАДКА ПОПОЛНЕНИЯ -->
            <TabItem Header="📥 ПОПОЛНЕНИЕ СЧЕТА">
                <views:DepositView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>