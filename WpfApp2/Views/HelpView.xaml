<UserControl x:Class="PaymentApp.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Width="700">
                <TextBlock Text="СПРАВКА - ОПИСАНИЕ ОПЕРАЦИЙ" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                <TextBlock Text="{Binding HelpText}" 
                         TextWrapping="Wrap" 
                         FontFamily="Consolas"
                         Background="White"
                         FontSize="12"
                         Padding="10"/>
                <StackPanel Margin="0,20,0,0">
                    <Border Background="LightCoral" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ПРИМЕР: УСПЕШНЫЙ ПЕРЕВОД" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Счет 1: 5000₽ → Счет 2: 3000₽, Сумма: 1000₽" FontWeight="SemiBold"/>
                            <TextBlock Text="Pre: ✓ Счета разные, сумма > 0, достаточно средств"/>
                            <TextBlock Text="Операция: 5000 - 1000 = 4000; 3000 + 1000 = 4000"/>
                            <TextBlock Text="Post: ✓ Балансы изменились корректно, нет нарушений"/>
                        </StackPanel>
                    </Border>

                    <Border Background="LightSalmon" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ПРИМЕР: НЕУДАЧНОЕ СНЯТИЕ" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Счет: 1000₽, Овердрафт: 100₽, Сумма: 1200₽" FontWeight="SemiBold"/>
                            <TextBlock Text="Pre: ✗ Недостаточно средств (1000 + 100 = 1100 меньше 1200)"/>
                            <TextBlock Text="Операция: Не выполнена"/>
                            <TextBlock Text="Post: Не применялось (операция не выполнена)"/>
                        </StackPanel>
                    </Border>

                    <Border Background="LightGreen" Padding="15">
                        <StackPanel>
                            <TextBlock Text="ПРИМЕР: УСПЕШНОЕ ПОПОЛНЕНИЕ" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Счет: 2000₽, Сумма: 500₽" FontWeight="SemiBold"/>
                            <TextBlock Text="Pre: ✓ Счет выбран, сумма > 0"/>
                            <TextBlock Text="Операция: 2000 + 500 = 2500"/>
                            <TextBlock Text="Post: ✓ Баланс увеличился на 500₽"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>