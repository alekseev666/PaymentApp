<UserControl x:Class="PaymentApp.Views.WithdrawView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel Width="400">
                <TextBlock Text="СНЯТИЕ СРЕДСТВ" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding Accounts[0].Balance, StringFormat='Счет 1: {0} руб.'}" Background="LightYellow" Padding="5"/>
                <TextBlock Text="{Binding Accounts[1].Balance, StringFormat='Счет 2: {0} руб.'}" Background="LightYellow" Padding="5"/>
                <TextBlock Text="{Binding Accounts[2].Balance, StringFormat='Счет 3: {0} руб.'}" Background="LightYellow" Padding="5" Margin="0,0,0,10"/>

                <TextBlock Text="Счет:" Margin="0,10,0,5"/>
                <ComboBox ItemsSource="{Binding Accounts}" 
                      DisplayMemberPath="Number"
                      SelectedItem="{Binding SelectedAccount}"/>

                <TextBlock Text="Сумма снятия:" Margin="0,10,0,5"/>
                <TextBox Text="{Binding WithdrawAmount}"/>
                <Button Content="СНЯТЬ СРЕДСТВА" 
                    Command="{Binding ExecuteWithdrawCommand}"
                    Background="LightCoral" Margin="0,20,0,10" Padding="10"/>
                <Button Content="КОНТРАКТ" 
                Command="{Binding ShowContractCommand}"
                Background="LightGoldenrodYellow" Margin="0,0,0,10" Padding="10"/>
                <Border Background="Lavender" Padding="10" Margin="0,10">
                    <TextBlock Text="{Binding ContractText}" TextWrapping="Wrap" FontFamily="Courier New"/>
                </Border>

                <Border Background="LightGray" Padding="10" Margin="0,10">
                    <StackPanel>
                        <TextBlock Text="СПЕЦИФИКАЦИЯ ОПЕРАЦИИ" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding PreConditionStatus, StringFormat='Предусловие: {0}'}" 
                           Foreground="{Binding PreConditionColor}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding PostConditionStatus, StringFormat='Постусловие: {0}'}" 
                           Foreground="{Binding PostConditionColor}" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="{Binding OperationResultMessage}" FontWeight="Bold" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>